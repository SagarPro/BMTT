<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlAttachments"
    tools:context="com.sagsaguz.bmtt.AttachmentsActivity"
    android:background="@color/colorAccent">

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="5dp"
        android:id="@+id/pbAttachment"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable="true"
        android:id="@+id/view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to view"
        android:textColor="@color/darkGrey"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@id/view"
        android:id="@+id/tvAttachment"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:dividerHeight="5dp"
        android:scrollbars="none"
        android:divider="@color/colorAccent"
        android:layout_below="@+id/tvAttachment"
        android:id="@+id/lvAttachment"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:fabSize="mini"
        android:src="@drawable/icon_add"
        android:id="@+id/fb_attachment"/>

</RelativeLayout>
