<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/silver"
    android:padding="@dimen/dimen_10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="User Payment Info"
        android:textSize="18sp"
        android:textColor="@color/darkGrey"
        android:textStyle="bold"
        android:id="@+id/tvTitle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="5dp"
        android:id="@+id/rlAdmin">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter payment info here..."
            android:textSize="16sp"
            android:textColor="@color/darkGrey"
            android:background="@drawable/login_border"
            android:padding="10dp"
            android:id="@+id/etPaymentInfo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPaymentInfo"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_marginEnd="5dp"
                android:textAllCaps="false"
                android:text="Cancel"
                android:textColor="@color/white"
                android:id="@+id/btnCancel1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_marginStart="5dp"
                android:textAllCaps="false"
                android:text="Update"
                android:textColor="@color/white"
                android:id="@+id/btnUpdate"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="5dp"
        android:id="@+id/rlSAdmin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_border"
            android:padding="10dp"
            android:text="Message"
            android:textColor="@color/darkGrey"
            android:textSize="16sp"
            android:id="@+id/tvPaymentInfo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPaymentInfo"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_marginEnd="5dp"
                android:textAllCaps="false"
                android:text="Cancel"
                android:textColor="@color/white"
                android:id="@+id/btnCancel2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_marginStart="5dp"
                android:textAllCaps="false"
                android:text="Accept"
                android:textColor="@color/white"
                android:id="@+id/btnAccept"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>