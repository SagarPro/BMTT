<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Admin"
        android:textColor="@color/silver"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tvTitle"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/rlDetails">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centre Name :"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="3dp"
            android:id="@+id/name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:hint="Enter centre name"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:id="@+id/etAdminCentre"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etAdminCentre"
            android:text="Centre Email Address :"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="3dp"
            android:id="@+id/email"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:hint="Enter centre email address"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:id="@+id/etAdminEmail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etAdminEmail"
            android:text="Centre Phone :"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="3dp"
            android:id="@+id/phone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:hint="Enter centre phone number"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:id="@+id/etAdminPhone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etAdminPhone"
            android:text="Centre Password :"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="3dp"
            android:id="@+id/password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:hint="Enter Password"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:padding="8dp"
            android:maxLines="1"
            android:background="@color/colorAccent"
            android:id="@+id/etAdminPassword"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/rlDetails"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:id="@+id/btnAdd"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rlDetails"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:id="@+id/btnCancel"/>

</RelativeLayout>