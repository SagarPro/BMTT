<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centre Details"
        android:textColor="@color/silver"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tvTitle"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/rlDetails">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centre Name :"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="3dp"
            android:id="@+id/name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:id="@+id/tvCName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCName"
            android:text="Centre Email Address :"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="3dp"
            android:id="@+id/email"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:id="@+id/tvCEmail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCEmail"
            android:text="Centre Phone :"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="3dp"
            android:id="@+id/phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:padding="8dp"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:id="@+id/tvCPhone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCPhone"
            android:text="Centre Password :"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="3dp"
            android:id="@+id/password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:padding="8dp"
            android:maxLines="1"
            android:background="@color/colorAccent"
            android:id="@+id/etCPassword"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/rlDetails"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/btnCCancel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/rlDetails"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/btnCEdit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/rlDetails"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/btnCSave"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/rlDetails"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone"
        android:id="@+id/btnCDelete" />

</RelativeLayout>