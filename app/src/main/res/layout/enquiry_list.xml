<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_border"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="@color/darkGrey"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="3dp"
            android:id="@+id/name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="14sp"
            android:textColor="@color/darkGrey"
            android:layout_below="@id/name"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/phone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/name"
            android:id="@+id/llRating" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@id/rlTop"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enquiry Status: "
            android:textSize="14sp"
            android:textColor="@color/darkGrey"
            android:id="@+id/status"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="status"
            android:textSize="14sp"
            android:textColor="@color/darkGrey"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/status"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvStatus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Up: "
            android:textSize="14sp"
            android:textColor="@color/darkGrey"
            android:layout_below="@+id/status"
            android:id="@+id/followUp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="57"
            android:textSize="14sp"
            android:textColor="@color/darkGrey"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/status"
            android:layout_toEndOf="@+id/followUp"
            android:id="@+id/tvFollowUp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assigned To: "
            android:textSize="14sp"
            android:textColor="@color/darkGrey"
            android:layout_below="@+id/followUp"
            android:id="@+id/assignedTo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bright Kid"
            android:textSize="14sp"
            android:textColor="@color/darkGrey"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/followUp"
            android:layout_toEndOf="@+id/assignedTo"
            android:id="@+id/tvAssignedTo"/>

    </RelativeLayout>

</RelativeLayout>