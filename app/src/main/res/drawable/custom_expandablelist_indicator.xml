<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
    <layer-list>
        <item
            android:left="30dp"
            android:right="0dp"
            android:top="20dp"
            android:bottom="10dp"
        android:drawable="@drawable/arrow_down"/>
    </layer-list>
    </item>
    <item android:state_expanded="true">
    <layer-list>
        <item
            android:left="30dp"
            android:right="0dp"
            android:top="20dp"
            android:bottom="10dp"
        android:drawable="@drawable/arrow_up"/>
    </layer-list>
    </item>
    <layer-list>
    <item android:left="30dp"
        android:right="0dp"
        android:top="20dp"
        android:bottom="10dp"
        android:drawable="@drawable/arrow_down"/>
    </layer-list>
</selector>